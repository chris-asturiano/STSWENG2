{{> header}}

<div class="container">
    <div class="row">
        <div id="searchForm" class="col-4">
            <p class="float-start">Search Filters:</p><br>
            <form action="" method="post">
                <div class="mb-3">
                    <label for="speciesSelect" class="form-label">Species</label>
