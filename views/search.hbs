                    </select> 
                </div>
                <div class="mb-3">
                    <label for="" class="form-label"></label>
                    <select name="" id="" class="form-select form-select-lg">
                        <option selected>Does not matter</option>
                        <option value="">1</option>
                        <option value="">2</option>
                    </select> 
                </div>
            </form>
        </div>
        <div id="resultContainer" class="col-8">
            <p class="float-start">Results</p>
        </div>
    </div>
</div>

